<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Register" >

    
    <EditText 
        android:id="@+id/newAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:layout_gravity="center_horizontal"
        android:ems="15"
        />
    
    <EditText 
        android:id="@+id/newNickname"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:hint="请输入昵称"
        android:layout_below="@id/newAccount"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="15"
        />
    
	<EditText 
		android:id="@+id/newPassword"
		android:layout_width="match_parent"
		android:layout_marginTop="10dp"
		android:inputType="textPassword"
		android:hint="请输入密码"
		android:layout_below="@id/newNickname"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:ems="15"
        />
	<EditText 
		android:id="@+id/confirmNewPassword"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:inputType="textPassword"
		android:hint="请确认密码"
		android:layout_below="@id/newPassword"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:ems="15"
        />
	
	<EditText 
		android:id="@+id/school"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:hint="请输入学校"
		android:layout_below="@id/confirmNewPassword"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:ems="15"
        />

	<Button
	    android:id="@+id/doneNewAccount"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/school"
	    android:layout_below="@+id/school"
	    android:layout_marginTop="75dp"
	    android:text="完成" />

	<EditText
	    android:id="@+id/classnumber"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/doneNewAccount"
	    android:layout_below="@+id/school"
	    android:layout_marginTop="21dp"
	    android:ems="15"
	    android:hint="请输入班级号"
	    />

</RelativeLayout>
